<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/parking_item_cardview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_cardview_location"
        android:layout_margin="@dimen/dimen_cardview_item"
        card_view:cardElevation="@dimen/dimen_cardview_item"
        card_view:cardCornerRadius="@dimen/spacing">

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/parking_item_textview_info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/sizeLarge"/>

    </android.support.v7.widget.CardView>
</LinearLayout>
